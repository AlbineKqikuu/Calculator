@{
    ViewData["Title"] = "Home";
}

<div class="calculator-container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="calculator-card">
                <div class="calculator-header">
                    <h2 class="text-center mb-0">
                        <i class="fas fa-calculator me-2"></i>Calculator
                    </h2>
                </div>
                
                <div class="calculator-display">
                    <div class="display-expression" id="expression">0</div>
                    <div class="display-result" id="result">0</div>
                </div>

                <div class="calculator-buttons">
                    <div class="row g-2">
                        <!-- First Row -->
                        <div class="col-3">
                            <button class="btn btn-calculator btn-secondary" onclick="clearAll()">
                                <i class="fas fa-eraser"></i> C
                            </button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-secondary" onclick="clearEntry()">
                                <i class="fas fa-backspace"></i> CE
                            </button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-warning" onclick="addToExpression('√')">
                                <i class="fas fa-square-root-alt"></i> √
                            </button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-danger" onclick="addToExpression('/')">
                                <i class="fas fa-divide"></i> ÷
                            </button>
                        </div>

                        <!-- Second Row -->
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('7')">7</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('8')">8</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('9')">9</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-danger" onclick="addToExpression('*')">
                                <i class="fas fa-times"></i> ×
                            </button>
                        </div>

                        <!-- Third Row -->
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('4')">4</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('5')">5</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('6')">6</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-danger" onclick="addToExpression('-')">
                                <i class="fas fa-minus"></i> −
                            </button>
                        </div>

                        <!-- Fourth Row -->
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('1')">1</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('2')">2</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('3')">3</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-danger" onclick="addToExpression('+')">
                                <i class="fas fa-plus"></i> +
                            </button>
                        </div>

                        <!-- Fifth Row -->
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('0')">0</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-light" onclick="addToExpression('.')">.</button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-warning" onclick="addToExpression('^')">
                                <i class="fas fa-superscript"></i> ^
                            </button>
                        </div>
                        <div class="col-3">
                            <button class="btn btn-calculator btn-success" onclick="calculate()">
                                <i class="fas fa-equals"></i> =
                            </button>
                        </div>
                    </div>
                </div>

                <div class="calculator-history mt-3">
                    <h6 class="text-muted mb-2">
                        <i class="fas fa-history me-1"></i>History
                    </h6>
                    <div id="history" class="history-list"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/calculator.js"></script>
} 